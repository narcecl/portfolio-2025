---
import Social from './Social.astro';
import locale from '@/i18n/lang.json';
import type { Locale } from '@/interfaces/lang';

const { id, class: className } = Astro.props;
const currentLang: Locale = (Astro.currentLocale as Locale) || 'es';
const language = locale[currentLang];
---

<section
    id={id}
    class={`${className} flex flex-col justify-center h-[65dvh]`}
>
    <div class="flex flex-col gap-8">
        <div class="animate-fade-down">
            <h1
                class="text-6xl font-serif sm:text-8xl md:text-7xl text-white font-bold tracking-tightest"
            >
                Nicol√°s Arce
            </h1>
            <p class="text-3xl sm:text-5xl font-serif text-sky-500">
                {language.sections.hero.position}
            </p>
        </div>

        <p class="animate-fade-down animate-delay-100 text-white text-xl sm:text-2xl font-light">
            {language.sections.hero.description}
        </p>

        <div class="animate-fade-down animate-delay-200">
            <div class="flex flex-col sm:flex-row gap-12 items-start sm:items-center">
                <a
                    id="hero__contact__button"
                    class="inline-flex text-lg order-2 sm:order-1 py-4 px-8 text-white leading-5 bg-sky-700 hover:bg-sky-800 rounded-full transition-all transition-300"
                    href="mailto:hola@narce.cl"
                >
                    {language.sections.hero.button}
                </a>

                <Social class="order-1 sm:order-2" />
            </div>
        </div>
    </div>
</section>
