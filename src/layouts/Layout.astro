---
import '@/styles/global.css';
import Analytics from '@vercel/analytics/astro';
import Footer from '@/components/Footer.astro';
import locale from '@/i18n/lang.json';
import type { Locale } from '@/interfaces/lang';

const currentLang: Locale = (Astro.currentLocale as Locale) || 'es';
const language = locale[currentLang];
---

<!doctype html>
<html lang={currentLang === 'es' ? 'es-CL' : 'en'}>
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1"
        />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/favicon.png"
        />
        <meta
            name="generator"
            content={Astro.generator}
        />
        <title>{language.meta.title}</title>
        <meta
            name="theme-color"
            content="#1a1a1a"
        />
        <meta
            name="description"
            content={language.meta.description}
        />

        <link
            rel="author"
            href="narce.cl"
        />
        <meta
            name="author"
            content="NicolÃ¡s Arce"
        />

        <link
            rel="preconnect"
            href="https://fonts.googleapis.com"
        />
        <link
            rel="preconnect"
            href="https://fonts.gstatic.com"
            crossorigin
        />
        <link
            href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Gabarito:wght@400..900&display=swap"
            rel="stylesheet"
        />

        <meta
            property="og:title"
            content={language.meta.title}
        />
        <meta
            property="og:description"
            content={language.meta.description}
        />
        <meta
            property="og:type"
            content="website"
        />
        <meta
            property="og:url"
            content={Astro.url.href}
        />
        <meta
            property="og:image"
            content="/og-image.jpg"
        />
        <!-- Crear imagen -->
        <meta
            property="og:locale"
            content={currentLang === 'es' ? 'es_CL' : 'en_US'}
        />

        <meta
            name="twitter:card"
            content="summary_large_image"
        />
        <meta
            name="twitter:title"
            content={language.meta.title}
        />
        <meta
            name="twitter:description"
            content={language.meta.description}
        />
        <meta
            name="twitter:image"
            content="/og-image.jpg"
        />

        <!-- Enlaces hreflang para SEO internacional -->
        <link
            rel="alternate"
            hreflang="es-CL"
            href="/"
        />
        <link
            rel="alternate"
            hreflang="en"
            href="/en/"
        />
        <link
            rel="alternate"
            hreflang="x-default"
            href="/"
        />

        <!-- Google Tag Manager -->
        <script is:inline>
            (function (w, d, s, l, i) {
                w[l] = w[l] || [];
                w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' });
                var f = d.getElementsByTagName(s)[0],
                    j = d.createElement(s),
                    dl = l != 'dataLayer' ? '&l=' + l : '';
                j.async = true;
                j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
                f.parentNode.insertBefore(j, f);
            })(window, document, 'script', 'dataLayer', 'GTM-PBW52NLQ');
        </script>
        <!-- End Google Tag Manager -->
    </head>

    <body class="font-sans bg-black">
        <!-- Google Tag Manager (noscript) -->
        <noscript>
            <iframe
                src="https://www.googletagmanager.com/ns.html?id=GTM-PBW52NLQ"
                height="0"
                width="0"
                style="display:none;visibility:hidden"
            ></iframe>
        </noscript>
        <!-- End Google Tag Manager (noscript) -->

        <Analytics />

        <main class="max-w-3xl px-5 mx-auto">
            <slot />
        </main>

        <Footer />
    </body>
</html>
